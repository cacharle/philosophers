RM = rm -f

CC = gcc
CCFLAGS = -Wall -Wextra -Werror
LDFLAGS = -lpthread

NAME = philo_one

SRC = main.c \
	  philo.c \
	  forks.c \
	  routine.c \
	  io.c \
	  common.c \
	  helper.c

OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $(OBJ) $(LDFLAGS)

%.o: %.c
	$(CC) $(CCFLAGS) -c -o $@ $<

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all
